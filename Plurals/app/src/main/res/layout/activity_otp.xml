<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activity.OtpActivity">

    <RelativeLayout
        android:id="@+id/otp_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="-15dp"

                android:scaleType="fitXY"
                android:src="@drawable/plu_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Enter personal Details"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/curved_bg"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_edittext"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_name"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText
                            android:id="@+id/otp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#ECECEC"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:hint="*Name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curved_edittext"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"

                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_email"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText

                            android:id="@+id/otp_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#ECECEC"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:hint="Email address"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curved_edittext"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"

                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_mob"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText
                            android:id="@+id/otp_mob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#ECECEC"
                            android:digits="0123456789"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="start"
                            android:hint="*Phone Number"
                            android:importantForAutofill="no"
                            android:inputType="phone|textNoSuggestions"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="@color/colorAccent"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:enabled="false"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>


                   <Button
                       android:id="@+id/otp_submit"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Submit"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="15dp"
                       android:backgroundTint="@color/red"
                       android:textColor="#fff"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="or"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Fetch details through"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_light"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    android:layout_marginBottom="30dp" />
                <ImageButton
                    android:id="@+id/fb_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@android:color/transparent"
                    android:src="@drawable/facebook_icon" />
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/colorAccent" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@android:color/transparent"
                    android:src="@drawable/gmail_icon" />
            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</ScrollView>