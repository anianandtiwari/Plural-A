<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/theme_bg_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/cv_about"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plural_horse_black_pn" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#24FBFBFB"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="bottom"
                        android:background="#DC0409"
                        android:gravity="center"
                        android:alpha="0.8"
                        android:paddingVertical="4dp"
                        android:text="WHO WE ARE?"
                         android:textColor="#FFFFFF"
                        android:textSize="18sp"
                         android:textStyle="bold"/>

                </FrameLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="35dp"
                android:id="@+id/cv_membership"
                android:layout_marginRight="50dp"
                app:cardBackgroundColor="#739C43"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="30dp"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/membership_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Party Membership"
                        android:gravity="start"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/membership_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_marketing"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-30dp"
                android:layout_gravity="end"
                android:layout_marginTop="26dp"
                android:id="@+id/cv_volunteer"
                app:cardBackgroundColor="#EEE0842F"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="start"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_volunteer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Party Ambassador"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:id="@+id/cv_fb"
                android:layout_marginTop="35dp"
                android:layout_marginRight="50dp"
                app:cardBackgroundColor="#45619d"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/fb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Like our page on Facebook"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/fb_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/facebook_icon"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-30dp"
                android:layout_gravity="end"
                android:layout_marginTop="26dp"
                android:id="@+id/cv_twitter"

                app:cardBackgroundColor="#50ABF1"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="start"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/twitter_icon"
                        android:layout_width="45dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_twitter"/>
                    <TextView
                        android:id="@+id/twitter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Follow us on Twitter"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="26dp"
                android:id="@+id/cv_youtube"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                app:cardBackgroundColor="#D22215"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="30dp"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/youtube_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Watch us on Youtube"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/youtube_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_youtube_white"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>



</RelativeLayout>